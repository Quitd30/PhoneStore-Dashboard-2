@model PhoneStore.Models.WarrantyClaim

@{
    ViewData["Title"] = "Chi tiết khiếu nại bảo hành";
}

<div class="flex-1 p-6">
    <!-- Breadcrumb -->
    <nav class="mb-6">
        <ol class="flex items-center space-x-2 text-sm text-gray-500">
            <li><a asp-action="Index" class="hover:text-blue-600">Quản lý bảo hành</a></li>
            <li><span class="mx-2">/</span></li>
            <li><a asp-action="Claims" class="hover:text-blue-600">Khiếu nại bảo hành</a></li>
            <li><span class="mx-2">/</span></li>
            <li class="text-gray-900">Chi tiết khiếu nại</li>
        </ol>
    </nav>

    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <!-- Header -->
        <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
            <h2 class="text-xl font-bold text-gray-800 flex items-center">
                <svg class="w-6 h-6 mr-2 text-orange-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                    <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                Chi tiết khiếu nại: @Model.ClaimCode
            </h2>
            <a asp-action="Claims" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Quay lại
            </a>
        </div>

        <!-- Content -->
        <div class="p-6">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Claim Information -->
                <div class="lg:col-span-2 space-y-6">
                    <!-- Basic Claim Info -->
                    <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
                        <div class="px-6 py-4 border-b border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-900">Thông tin khiếu nại</h3>
                        </div>
                        <div class="p-6">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="text-sm font-medium text-gray-700">Mã khiếu nại</label>
                                    <div class="mt-1 text-sm text-gray-900 font-semibold">@Model.ClaimCode</div>
                                </div>
                                <div>
                                    <label class="text-sm font-medium text-gray-700">Trạng thái</label>
                                    <div class="mt-1">
                                        @if (Model.Status == PhoneStore.Models.WarrantyClaim.ClaimStatus.Pending)
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">@Model.Status</span>
                                        }
                                        else if (Model.Status == PhoneStore.Models.WarrantyClaim.ClaimStatus.InProgress)
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">@Model.Status</span>
                                        }
                                        else if (Model.Status == PhoneStore.Models.WarrantyClaim.ClaimStatus.Approved)
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">@Model.Status</span>
                                        }
                                        else if (Model.Status == PhoneStore.Models.WarrantyClaim.ClaimStatus.Completed)
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">@Model.Status</span>
                                        }
                                        else if (Model.Status == PhoneStore.Models.WarrantyClaim.ClaimStatus.Rejected)
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">@Model.Status</span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">@Model.Status</span>
                                        }
                                    </div>
                                </div>
                                <div>
                                    <label class="text-sm font-medium text-gray-700">Loại vấn đề</label>
                                    <div class="mt-1 text-sm text-gray-900">@Model.IssueType</div>
                                </div>
                                <div>
                                    <label class="text-sm font-medium text-gray-700">Ngày gửi khiếu nại</label>
                                    <div class="mt-1 text-sm text-gray-900">@Model.SubmittedDate.ToString("dd/MM/yyyy HH:mm")</div>
                                </div>
                                @if (Model.ProcessedDate.HasValue)
                                {
                                    <div>
                                        <label class="text-sm font-medium text-gray-700">Ngày xử lý</label>
                                        <div class="mt-1 text-sm text-gray-900">@Model.ProcessedDate.Value.ToString("dd/MM/yyyy HH:mm")</div>
                                    </div>
                                }
                                @if (Model.CompletedDate.HasValue)
                                {
                                    <div>
                                        <label class="text-sm font-medium text-gray-700">Ngày hoàn thành</label>
                                        <div class="mt-1 text-sm text-gray-900">@Model.CompletedDate.Value.ToString("dd/MM/yyyy HH:mm")</div>
                                    </div>
                                }
                                <div class="md:col-span-2">
                                    <label class="text-sm font-medium text-gray-700">Mô tả vấn đề</label>
                                    <div class="mt-1 text-sm text-gray-900 p-3 bg-gray-50 rounded-md">@Model.IssueDescription</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Process Claim Form -->
                    <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
                        <div class="px-6 py-4 border-b border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-900">Xử lý khiếu nại</h3>
                        </div>
                        <div class="p-6">
                            <form asp-action="ProcessClaim" method="post" class="space-y-4">
                                <input type="hidden" name="claimId" value="@Model.WarrantyClaimId" />
                                
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">Trạng thái mới</label>
                                        <select name="status" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                                            @foreach (var status in ViewBag.StatusList as List<string>)
                                            {
                                                <option value="@status" selected="@(Model.Status == status)">@status</option>
                                            }
                                        </select>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">Loại giải quyết</label>
                                        <select name="resolutionType" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                                            <option value="">-- Chọn loại giải quyết --</option>
                                            @foreach (var type in ViewBag.ResolutionTypes as List<string>)
                                            {
                                                <option value="@type" selected="@(Model.ResolutionType == type)">@type</option>
                                            }
                                        </select>
                                    </div>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Ghi chú của Admin</label>
                                    <textarea name="adminNotes" rows="3" 
                                             class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                                             placeholder="Ghi chú xử lý khiếu nại...">@Model.AdminNotes</textarea>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Cách giải quyết</label>
                                    <textarea name="resolution" rows="3" 
                                             class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                                             placeholder="Mô tả cách giải quyết khiếu nại...">@Model.Resolution</textarea>
                                </div>

                                <div class="flex space-x-4">
                                    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                        Cập nhật khiếu nại
                                    </button>
                                    <a asp-action="Claims" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                        Hủy bỏ
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Warranty Information -->
                <div class="lg:col-span-1 space-y-6">
                    <!-- Warranty Info -->
                    <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
                        <div class="px-6 py-4 border-b border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-900">Thông tin bảo hành</h3>
                        </div>
                        <div class="p-6">
                            <div class="space-y-4">
                                <div>
                                    <label class="text-sm font-medium text-gray-700">Mã bảo hành</label>
                                    <div class="mt-1">
                                        <a asp-action="Details" asp-route-id="@Model.Warranty.WarrantyId" 
                                           class="text-blue-600 hover:text-blue-800 hover:underline font-medium">
                                            @Model.Warranty.WarrantyCode
                                        </a>
                                    </div>
                                </div>
                                <div>
                                    <label class="text-sm font-medium text-gray-700">Sản phẩm</label>
                                    <div class="mt-1 text-sm text-gray-900">@Model.Warranty.OrderDetail.Product.ProductName</div>
                                </div>
                                <div>
                                    <label class="text-sm font-medium text-gray-700">Màu sắc</label>
                                    <div class="mt-1 text-sm text-gray-900">@Model.Warranty.OrderDetail.Color?.ColorName</div>
                                </div>
                                <div>
                                    <label class="text-sm font-medium text-gray-700">Ngày hết hạn</label>
                                    <div class="mt-1 text-sm text-gray-900">@Model.Warranty.EndDate.ToString("dd/MM/yyyy")</div>
                                </div>
                                <div>
                                    <label class="text-sm font-medium text-gray-700">Trạng thái bảo hành</label>
                                    <div class="mt-1">
                                        @if (Model.Warranty.Status == PhoneStore.Models.Warranty.WarrantyStatus.Active)
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Đang bảo hành</span>
                                        }
                                        else if (Model.Warranty.Status == PhoneStore.Models.Warranty.WarrantyStatus.Expired)
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Hết hạn</span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">@Model.Warranty.Status</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Customer Information -->
                    <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
                        <div class="px-6 py-4 border-b border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-900">Thông tin khách hàng</h3>
                        </div>
                        <div class="p-6">
                            <div class="space-y-4">
                                <div>
                                    <label class="text-sm font-medium text-gray-700">Tên khách hàng</label>
                                    <div class="mt-1 text-sm text-gray-900">@Model.Warranty.Customer.Name</div>
                                </div>
                                <div>
                                    <label class="text-sm font-medium text-gray-700">Email</label>
                                    <div class="mt-1 text-sm text-gray-900">@Model.Warranty.Customer.Email</div>
                                </div>
                                <div>
                                    <label class="text-sm font-medium text-gray-700">Số điện thoại</label>
                                    <div class="mt-1 text-sm text-gray-900">@Model.Warranty.Customer.Phone</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Processing Info -->
                    @if (!string.IsNullOrEmpty(Model.ProcessedByAdmin))
                    {
                        <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
                            <div class="px-6 py-4 border-b border-gray-200">
                                <h3 class="text-lg font-semibold text-gray-900">Thông tin xử lý</h3>
                            </div>
                            <div class="p-6">
                                <div class="space-y-4">
                                    <div>
                                        <label class="text-sm font-medium text-gray-700">Người xử lý</label>
                                        <div class="mt-1 text-sm text-gray-900">@Model.ProcessedByAdmin</div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.AdminNotes))
                                    {
                                        <div>
                                            <label class="text-sm font-medium text-gray-700">Ghi chú</label>
                                            <div class="mt-1 text-sm text-gray-900 p-3 bg-gray-50 rounded-md">@Model.AdminNotes</div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.Resolution))
                                    {
                                        <div>
                                            <label class="text-sm font-medium text-gray-700">Giải quyết</label>
                                            <div class="mt-1 text-sm text-gray-900 p-3 bg-gray-50 rounded-md">@Model.Resolution</div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
